---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";
import SkillCard from "../components/SkillCard.astro";
import { Icon } from "astro-icon/components";

const skills = [
    { text: "Linux", icon: "logos:linux-tux" },
    { text: "Git", icon: "logos:git-icon" },
    { text: "C++", icon: "logos:c-plusplus" },
    { text: "Python", icon: "logos:python" },
    { text: "JavaScript", icon: "logos:javascript" },
    { text: "React", icon: "logos:react" },
    { text: "SQL", icon: "logos:postgresql" },
    { text: "Vim", icon: "logos:vim" },
];
---

<Layout>
    <Hero />

    <section id="skills" class="py-16 bg-transparent">
        <div class="container mx-auto px-6">
            <h2
                class="text-3xl font-bold text-center text-[#4C4F69] dark:text-[#CDD6F4] mb-12"
            >
                My Skills
            </h2>
            <Grid>
                {
                    skills.map((skill) => (
                        <SkillCard text={skill.text}>
                            <Icon name={skill.icon} size={48} />
                        </SkillCard>
                    ))
                }
            </Grid>
        </div>
    </section>

    <div class="h-[1000px]"></div>
</Layout>

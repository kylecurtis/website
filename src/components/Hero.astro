---
import { Icon } from "astro-icon/components";
import { Code } from "astro:components";
import { Image } from "astro:assets";
import python from "../assets/python.png";

const firstName = "Kyle";
const lastName = "Curtis";
const bio = "Student / Software Engineer / Researcher";

const sampleCode = `def main():
    about = {
        "location": "127.0.0.1",
        "education": ["A.S.", "B.A.S."],
        "interests": ["Systems", "Web", "ML/AI"]
    }
    return about

if __name__ == "__main__":
    main()`;

---

<section id="home" class="flex min-h-screen bg-transparent p-8">
  <div
    class="container mx-auto flex flex-col xl:flex-row items-center xl:justify-between gap-12"
  >
    <!-- TEXT CONTENT -->
    <div class="w-full xl:w-1/2 space-y-6 mt-10 xl:mt-0">
      <p class="text-xl md:text-xl font-bold">ðŸ‘‹ Hi, I am</p>
      <h1
        class="text-4xl md:text-5xl xl:text-6xl font-bold text-[#4C4F69] dark:text-[#CDD6F4]"
      >
        {firstName}
        {lastName}
      </h1>
      <p
        class="text-lg md:text-xl leading-relaxed text-[#5C5F77] dark:text-[#BAC2DE]"
      >
        {bio}
      </p>
      <div class="flex flex-row">
        <a href="https://github.com/kylecurtis"
          ><Icon name="logos:git-icon" size={32} /></a
        >
        <a href="https://kylecurtis.bsky.social"
          ><Icon name="logos:bluesky" size={32} style="margin-left: 20px;" /></a
        >
      </div>
    </div>

    <!-- CODE BLOCK W/ GOPHER -->
    <div class="relative md:block w-full xl:w-1/2 mt-16 xl:mt-0">
      <!-- GOPHER IMAGE -->
      <Image
        src={python}
        alt="python logo"
        class="absolute -top-14 left-1/2 transform -translate-x-1/2 z-0 w-[100px] md:w-[120px]"
      />
      <!-- CODE BLOCK -->
      <div
        class="bg-[#1E1E2E] text-[#CDD6F4] p-0 rounded-lg shadow-xl overflow-x-auto relative z-10"
      >
        <Code
          code={sampleCode}
          lang="python"
          theme="catppuccin-mocha"
          style="padding: 10px; border-radius: 20px;"
        />
      </div>
    </div>
  </div>
</section>
